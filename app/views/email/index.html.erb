<h1> Reception Box </h1>
<script
        src="https://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>


<div class="row">
    <div class="col-lg-offset-2 col-lg-2">
      
      <table class="table table-striped">
        <tr>

          <th>Objet</th>

        </tr>

        <% @email.each do |email| %> 

          <tr>
            <% if email.read == true %> 
            <td id="object_<%= email.id %>" class="read" ><%= link_to email.object, email_path(email), remote: true %></td>
            <% else %>
            <td id="object_<%= email.id %>" class="not-read" ><%= link_to email.object, email_path(email), remote: true %></td>
            <% end %>

          </tr>
        <% end %>
      </table>

    </div>

    <div class="col-lg-6">
      <table class="table table-striped">
        <tr>

          <th>Texte</th>

        </tr>
      </table>

      <% @emails.each do |email| %> 

          <div id="mail_<%= email.id %>" class="emailcontent" style="display: none;" >
            <div class="row" id="box">
                <br>
              <p><%= email.body %></p>
            
              <%= link_to email, remote: true, method: :delete, class: 'delete_email' , data: { confirm: "Confirmer ?" } do %>
                <button>Supprimer</button>
              <% end %>

            </div>
          </div>
        <% end %>
      
    </div>
  </div>
</div>

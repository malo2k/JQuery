<div class="container text-center">
  <div id="tabs">
    <% @categories.each_with_index do  |category, ind|%> 
      <%= link_to category.title , "#tab#{ind}" %>
    <% end %>
  </div>

  <% @categories.each_with_index do  |category, ind|%> 
    <div id="tab<%=ind%>" class="tab-section">
        <% category.tasks.each do |task|  %>
          <h2><%= task.title  %></h2>
          <p><% unless task.deadline.nil? %>
            , to read: <%= task.deadline.strftime('%D')  %></p>
          <% end %>
        <% end %>
    </div>
  <% end %>
</div>

